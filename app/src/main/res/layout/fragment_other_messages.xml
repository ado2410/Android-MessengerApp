<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/activity_other_messages_iv_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_default_avatar"
        android:layout_marginRight="15dp"
        android:layout_alignBottom="@id/activity_other_messages_content"/>

    <LinearLayout
        android:id="@+id/activity_other_messages_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/activity_other_messages_iv_avatar">

    </LinearLayout>

</RelativeLayout>