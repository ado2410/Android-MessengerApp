<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Searching -->
    <RelativeLayout
        android:id="@+id/activity_search_rl_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <EditText
            android:id="@+id/activity_search_et_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:background="@drawable/shape_input"
            android:textColor="@color/text"
            android:textColorHint="@color/text_light"
            android:hint="Tìm kiếm" />

        <ImageView
            android:id="@+id/activity_search_iv_search_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_baseline_close_24"
            android:clickable="true"
            android:layout_alignRight="@id/activity_search_et_search"
            android:layout_centerVertical="true"
            app:tint="@color/primary" />

    </RelativeLayout>

    <!-- Message -->
    <ListView
        android:id="@+id/activity_search_lv_user_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:layout_below="@+id/activity_search_rl_search"
        android:layout_margin="10dp"
        android:padding="10dp">

    </ListView>

</RelativeLayout>